DESCRIPTION="Project Gutenberg Library"
HOMEPAGE="http://www.gutenberg.org/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.bz2"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm -f
}

PKG_NAMES="${PN} ${PN}0 ${PN}-devel"
libgutenfetch_CONTENTS="usr/share/doc"
libgutenfetch0_CONTENTS="usr/bin usr/share/${PN}"
libgutenfetch_devel_CONTENTS="usr/include usr/lib usr/share/man"
