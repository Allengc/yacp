  /usr/share/doc/libmongo-client/README.rst

(libmongo-client0)
  /usr/bin/cygmongo-client-0.dll

(libmongo-client-devel)
  /usr/include/mongo-client/bson.h
  /usr/include/mongo-client/mongo-client.h
  /usr/include/mongo-client/mongo-sync-cursor.h
  /usr/include/mongo-client/mongo-sync-pool.h
  /usr/include/mongo-client/mongo-sync.h
  /usr/include/mongo-client/mongo-utils.h
  /usr/include/mongo-client/mongo-wire.h
