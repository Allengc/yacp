DESCRIPTION="The floppy controller emulation from JOYCE"
HOMEPAGE="http://www.seasip.demon.co.uk/Unix/LibDsk/"
SRC_URI="http://www.seasip.demon.co.uk/Unix/LibDsk/${P}.tar.gz"

src_compile()
{
	cd ${S}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm
	cygautoreconf
	cd ${B}
	cygconf
	cygmake
}

PKG_NAMES="${PN} ${PN}_3 ${PN}-devel"
lib765_CONTENTS="usr/share"
lib765_3_CONTENTS="usr/bin"
lib765_devel_CONTENTS="usr/include usr/lib"

DOCS="doc/765.txt doc/COPYING.LIB"
