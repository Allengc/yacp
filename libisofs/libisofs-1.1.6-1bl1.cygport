DESCRIPTION="Library to create ISO 9660 disk images"
HOMEPAGE="http://libburnia-project.org/"
SRC_URI="http://files.libburnia-project.org/releases/${P}.tar.gz"

CYGCONF_ARGS="
	--enable-maintainer-mode
	--disable-static
	--disable-libjte
"

PKG_NAMES="${PN} ${PN}6 ${PN}-devel"
libisofs_CONTENTS="usr/share"
libisofs6_CONTENTS="usr/bin"
libisofs_devel_CONTENTS="usr/include usr/lib"

DOCS="doc/Tutorial doc/*.txt"
