DESCRIPTION="Speech codec suitable for robust voice communication over IP"
HOMEPAGE="http://www.ilbcfreeware.org/"
SRC_URI="http://simon.morlat.free.fr/download/1.1.x/source/${PN}.tar.gz"
SRC_DIR="${PN}"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm -f
}

PKG_NAMES="${PN} libilbc0 libilbc-devel"
ilbc_rfc3951_CONTENTS="usr/share"
libilbc0_CONTENTS="usr/bin"
libilbc_devel_CONTENTS="usr/include usr/lib"
