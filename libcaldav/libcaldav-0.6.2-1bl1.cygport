DESCRIPTION="Client library adding support for the CalDAV protocol (rfc4791)"
HOMEPAGE="http://${PN}.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

CYGCONF_ARGS="
	--enable-caldav
	--enable-unittest
"

MAKEOPTS="-j1"

PKG_NAMES="${PN} ${PN}0 ${PN}-devel"
libcaldav_CONTENTS="usr/bin/*.exe usr/share/doc"
libcaldav0_CONTENTS="usr/bin/*.dll"
libcaldav_devel_CONTENTS="usr/include usr/lib"

DIFF_EXCLUDES="${PN}.pc"
