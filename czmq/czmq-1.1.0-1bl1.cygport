DESCRIPTION="High-level C Binding for ZeroMQ"
HOMEPAGE="http://${PN}.zeromq.org/"
SRC_URI="http://download.zeromq.org/${P}.tar.gz"

CYGCONF_ARGS="--disable-static"

src_install()
{
	cd ${B}
	cyginstall
	cd ${S}
	doman doc/*.7
}

PKG_NAMES="${PN} lib${PN}0 lib${PN}-devel"
czmq_CONTENTS="usr/bin/*.exe usr/share/doc"
libczmq0_CONTENTS="usr/bin/*.dll"
libczmq_devel_CONTENTS="usr/include usr/lib usr/share/man"
