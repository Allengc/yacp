  /usr/share/doc/libcoyotl/README

(libcoyotl3.1_4)
  /usr/bin/cygcoyotl-3-1-4.dll

(libcoyotl-devel)
  /usr/include/libcoyotl/array.h
  /usr/include/libcoyotl/cmwc4096.h
  /usr/include/libcoyotl/command_line.h
  /usr/include/libcoyotl/crccalc.h
