DESCRIPTION="Dynamic Array Library"
HOMEPAGE="http://sourceforge.net/projects/dynarr/"
SRC_URI="mirror://sourceforge/dynarr/${P}.tar.bz2"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm -f
}

PKG_NAMES="${PN} ${PN}0 ${PN}-devel"
libdynarr_CONTENTS="usr/share"
libdynarr0_CONTENTS="usr/bin"
libdynarr_devel_CONTENTS="usr/include usr/lib"
