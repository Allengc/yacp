inherit cmake

DESCRIPTION="YAML parser and emitter for C++"
HOMEPAGE="http://code.google.com/p/${PN}/"
SRC_URI="http://${PN}.googlecode.com/files/${P}.tar.gz"
SRC_DIR="${PN}"

# http://pkgs.fedoraproject.org/gitweb/?p=yaml-cpp.git
PATCH_URI="001_yaml-cpp_fixbuildgcc46.patch"

CYGCMAKE_ARGS="-DBUILD_SHARED_LIBS=ON"

PKG_NAMES="${PN} lib${PN}0.2 lib${PN}-devel"
yaml_cpp_CONTENTS="usr/share"
libyaml_cpp0_2_CONTENTS="usr/bin"
libyaml_cpp_devel_CONTENTS="usr/include usr/lib"
