inherit cmake

DESCRIPTION="YAML parser and emitter for C++"
HOMEPAGE="http://code.google.com/p/${PN}/"
SRC_URI="http://${PN}.googlecode.com/files/${P}.tar.gz"
SRC_DIR="${PN}"

CYGCMAKE_ARGS="-DBUILD_SHARED_LIBS=ON"

src_test()
{
	cd ${B}
	PATH=${PATH}:${B} cygtest
}

PKG_NAMES="
	${PN}
	lib${PN}0.3
	lib${PN}-devel
"
yaml_cpp_CONTENTS="
	usr/share
"
libyaml_cpp0_3_CONTENTS="
	usr/bin
"
libyaml_cpp_devel_CONTENTS="
	usr/include
	usr/lib
"
