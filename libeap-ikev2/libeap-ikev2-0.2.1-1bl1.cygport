DESCRIPTION="Implementation of the EAP-IKEv2 authentication method"
HOMEPAGE="http://eap-ikev2.sourceforge.net/"
SRC_URI="mirror://sourceforge/eap-ikev2/${P}.tar.gz"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm -f
}

PKG_NAMES="${PN} ${PN}_0 ${PN}-devel"
libeap_ikev2_CONTENTS="usr/share"
libeap_ikev2_0_CONTENTS="usr/bin"
libeap_ikev2_devel_CONTENTS="usr/include usr/lib"
