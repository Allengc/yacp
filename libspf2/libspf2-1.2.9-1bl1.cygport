DESCRIPTION="Sender Policy Framework"
HOMEPAGE="http://www.${PN}.org/"
SRC_URI="http://www.${PN}.org/spf/${P}.tar.gz"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm -f
}

CYGCONF_ARGS="--disable-static"

PKG_NAMES="${PN} ${PN}_2 ${PN}-devel"
libspf2_CONTENTS="usr/bin/*.exe usr/share"
libspf2_2_CONTENTS="usr/bin/*.dll"
libspf2_devel_CONTENTS="usr/include usr/lib"
