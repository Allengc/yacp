GIT_URI="git://git.moblin.org/${PN}"
inherit git

DESCRIPTION="Port of GTK IMContext to Clutter"
HOMEPAGE="http://git.moblin.org/cgit.cgi/${PN}/"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	cp /usr/share/gtk-doc/data/gtk-doc.make .
}

PKG_NAMES="${PN} lib${PN}0.1_0 lib${PN}0.1-devel"
clutter_imcontext_CONTENTS="etc usr/bin/*.exe usr/share"
libclutter_imcontext0_1_0_CONTENTS="usr/bin/*.dll"
libclutter_imcontext0_1_devel_CONTENTS="usr/include usr/lib"
