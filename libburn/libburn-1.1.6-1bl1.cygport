DESCRIPTION="Library by which preformatted data get onto optical media"
HOMEPAGE="http://libburnia-project.org/"
SRC_URI="http://files.libburnia-project.org/releases/${P}.tar.gz"
SRC_DIR="${PN}-${PV[1]}.${PV[2]}.${PV[3]}"

CYGCONF_ARGS="
	--enable-maintainer-mode
	--disable-static
"

PKG_NAMES="${PN} ${PN}4 ${PN}-devel"
libburn_CONTENTS="usr/bin/*.exe usr/share"
libburn4_CONTENTS="usr/bin/*.dll"
libburn_devel_CONTENTS="usr/include usr/lib"

DOCS="doc/*.txt"
