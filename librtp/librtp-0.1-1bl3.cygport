DESCRIPTION="Library for RTP (Real Time Protocol, RFC 1889) used by gnome-o-phone"
HOMEPAGE="http://gphone.sourceforge.net/template.php3?page=${PN}"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm -f
}

PKG_NAMES="${PN} ${PN}0 ${PN}-devel"
librtp_CONTENTS="usr/share"
librtp0_CONTENTS="usr/bin"
librtp_devel_CONTENTS="usr/include usr/lib"
