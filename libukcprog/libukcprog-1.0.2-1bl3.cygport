DESCRIPTION="Generally useful low level routines"
HOMEPAGE="http://www.i-scream.org/"
SRC_URI="http://www.mirrorgeek.com/i-scream/${PN}/${P}.tar.gz"

src_compile()
{
	cd ${S}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm
	cygautoreconf
	cd ${B}
	cygconf
	cygmake
}

PKG_NAMES="${PN} ${PN}0 ${PN}-devel"
libukcprog_CONTENTS="usr/share/doc"
libukcprog0_CONTENTS="usr/bin"
libukcprog_devel_CONTENTS="
	usr/include
	usr/lib
	usr/share/man/man3
"
