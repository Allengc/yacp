DESCRIPTION="Commandline flags module for C++"
HOMEPAGE="http://code.google.com/p/google-${PN}/"
SRC_URI="http://google-${PN}.googlecode.com/files/${P}.tar.gz"

CYGPORT_USE_UNSTABLE_API=1
src_unpack_hook()
{
	chmod -R u+w ${origsrcdir}/${SRC_DIR}
}

CYGCONF_ARGS="--disable-static"

PKG_NAMES="${PN} lib${PN}0 lib${PN}-devel"
gflags_CONTENTS="
	usr/bin/*.sh
	usr/share
"
libgflags0_CONTENTS="
	usr/bin/*.dll
"
libgflags_devel_CONTENTS="
	usr/include
	usr/lib
"
