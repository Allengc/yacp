GIT_URI="git://anongit.freedesktop.org/${PN}/${PN}"
inherit git

DESCRIPTION="Library for fingerprint readers"
HOMEPAGE="http://www.freedesktop.org/wiki/Software/fprint/${PN}"

CYGCONF_ARGS="
	--disable-static
	--enable-examples-build
"

PKG_NAMES="
	${PN}
	${PN}0
	${PN}-devel
"
libfprint_CONTENTS="
	usr/lib/udev
	usr/share
"
libfprint0_CONTENTS="
	usr/bin
"
libfprint_devel_CONTENTS="
	usr/include
	usr/lib/${PN}*
	usr/lib/pkgconfig
"
