DESCRIPTION="Tools to access CP/M file systems"
HOMEPAGE="http://www.moria.de/~michael/${PN}/"
SRC_URI="http://www.moria.de/~michael/${PN}/${P}.tar.gz"

src_install()
{
	cd ${B}
	dobin *.exe
	doman *.[15]
	insinto /usr/share
	doins ${S}/diskdefs
}

src_test()
{
	cd ${B}
	ln -sf ${S}/badfs .
	cygmake fsck.test
}

DIFF_EXCLUDES="*.1"
