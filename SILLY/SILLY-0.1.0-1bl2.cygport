DESCRIPTION="Simple and easy to use library for image loading"
HOMEPAGE="http://www.cegui.org.uk/"
SRC_URI="mirror://sourceforge/crayzedsgui/${P}.tar.gz"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm -f
}

PKG_NAMES="${PN} lib${PN}1 lib${PN}-devel"
SILLY_CONTENTS="usr/share"
libSILLY1_CONTENTS="usr/bin"
libSILLY_devel_CONTENTS="usr/include usr/lib"

DIFF_EXCLUDES="SILLYOptions.h"
