GIT_URI="git://gitorious.org/${PN}/${PN}.git"
inherit git

DESCRIPTION="I/O abstraction layer"
HOMEPAGE="http://gitorious.org/${PN}"

src_compile()
{
	cd ${S}
	cp /usr/share/gtk-doc/data/gtk-doc.make .
	cygautoreconf
	cd ${B}
	cygconf
	cygmake
}

