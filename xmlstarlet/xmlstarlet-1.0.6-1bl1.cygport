DESCRIPTION="Command Line XML Toolkit"
HOMEPAGE="http://xmlstar.sourceforge.net/"
SRC_URI="mirror://sourceforge/xmlstar/${PN}/${P}.tar.gz"

# http://pkgs.fedoraproject.org/gitweb/?p=xmlstarlet.git
PATCH_URI="xmlstarlet-1.0.1-docs.patch"

CYGCONF_ARGS="
	--enable-maintainer-mode
	--disable-static-libs
"

src_test()
{
	cd ${B}
	cp -R ${S}/examples examples
	cp -R ${S}/tests tests
	cygtest
	rm -rf examples tests
}

DIFF_EXCLUDES="Makefile pkginfo"
