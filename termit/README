  /usr/share/locale/ru/LC_MESSAGES/termit.mo
  /usr/share/locale/sv/LC_MESSAGES/termit.mo
  /usr/share/locale/zh_TW/LC_MESSAGES/termit.mo
  /usr/share/man/man1/termit.1.gz

