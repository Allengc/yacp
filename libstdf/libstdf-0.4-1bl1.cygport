DESCRIPTION="Library to manipulate the Standard Test Data Format"
HOMEPAGE="http://freestdf.sourceforge.net/"
SRC_URI="mirror://sourceforge/freestdf/${P}.tar.bz2"

src_test()
{
	cd ${B}
	cp -R ${S}/tests .
	cygtest
	rm -rf tests
}

PKG_NAMES="${PN} ${PN}0 ${PN}-devel"
libstdf_CONTENTS="
	usr/share/doc
"
libstdf0_CONTENTS="
	usr/bin/*.dll
"
libstdf_devel_CONTENTS="
	usr/bin/${PN}-config
	usr/include
	usr/lib
	usr/share/man
"

DIFF_EXCLUDES="libstdf_sys_config.h ltmain.sh l*.m4"
