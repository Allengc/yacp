DESCRIPTION="Disk Based Hashtable"
HOMEPAGE="http://${PN}.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

src_install()
{
	cd ${B}
	cyginstall
	cd ${D}
	if [ -e usr/share/pkgconfig/${PN}.pc ]; then
		mkdir -p usr/lib/pkgconfig
		mv usr/share/pkgconfig/${PN}.pc usr/lib/pkgconfig/${PN}.pc
	fi
}

PKG_NAMES="${PN} lib${PN}2_1 lib${PN}-devel"
dbh_CONTENTS="usr/share/doc"
libdbh2_1_CONTENTS="usr/bin"
libdbh_devel_CONTENTS="usr/include usr/lib usr/share/gtk-doc usr/share/man"
