GIT_URI="git://github.com/couchbase/${PN}.git"
GIT_TAG="${PV}"
inherit git

DESCRIPTION="Couchbase client for C"
HOMEPAGE="http://www.couchbase.com/develop/c/current"

CYGCONF_ARGS="
	--enable-system-libsasl
"

PKG_NAMES="
	${PN}
	${PN}0
	${PN}-devel
"
libcouchbase_CONTENTS="
	usr/bin/cbc*
	usr/share
"
libcouchbase0_CONTENTS="
	usr/bin/*.dll
"
libcouchbase_devel_CONTENTS="
	usr/include
	usr/lib
"
