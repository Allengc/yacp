	${PN}
	lib${PN}1.1.0
	lib${PN}-devel
"
log4cplus_CONTENTS="
	usr/share
"
liblog4cplus1_1_0_CONTENTS="
	usr/bin
"
liblog4cplus_devel_CONTENTS="
	usr/include
	usr/lib
"
