DESCRIPTION="Logging Framework for C++"
HOMEPAGE="http://${PN}.sf.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.xz"

CYGCONF_ARGS="--disable-static"

src_test()
{
	cd ${B}/tests
	for d in `ls -d *test`
	do
		pushd ${d}
		./${d}.exe
		popd
	done
}

