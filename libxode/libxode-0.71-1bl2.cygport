DESCRIPTION="XML library which wraps expat"
HOMEPAGE="http://${PN}.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

src_compile()
{
	cd ${S}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm
	cygautoreconf
	cd ${B}
	cygconf
	cygmake
}

PKG_NAMES="${PN} ${PN}1 ${PN}-devel"
libxode_CONTENTS="usr/share"
libxode1_CONTENTS="usr/bin/cyg*.dll"
libxode_devel_CONTENTS="usr/bin/${PN}-config usr/include usr/lib"
