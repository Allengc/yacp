DESCRIPTION="Stand-alone portable C++ class framework for manipulating audio data"
HOMEPAGE="http://www.gnutelephony.org/index.php/GNU_ccAudio2"
SRC_URI="mirror://gnu/ccaudio/${P}.tar.gz"

CYGCONF_ARGS="--disable-static"

PKG_NAMES="${PN} lib${PN} libccaudio-devel"

ccaudio2_CONTENTS="
	usr/bin/*.exe
	usr/share/doc
	usr/share/man/man1/[at]*
"
libccaudio2_CONTENTS="
	usr/bin/*.dll
"
libccaudio_devel_CONTENTS="
	usr/bin/${PN}-config
	usr/include
	usr/lib
	usr/share/man/man1/c*
"
