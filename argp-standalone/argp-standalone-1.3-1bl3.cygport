DESCRIPTION="Standalone argp from glibc"
HOMEPAGE="http://www.freshports.org/devel/${PN}/"
SRC_URI="http://www.lysator.liu.se/~nisse/misc/${P}.tar.gz"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm -f
}

CYGCONF_ARGS="--disable-static"

PKG_NAMES="${PN} libargp0 libargp-devel"
argp_standalone_CONTENTS="usr/share"
libargp0_CONTENTS="usr/bin"
libargp_devel_CONTENTS="usr/include usr/lib"
