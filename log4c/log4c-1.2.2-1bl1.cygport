DESCRIPTION="Logging for C Library"
HOMEPAGE="http://${PN}.sf.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

CYGCONF_ARGS="
	--enable-doc
	--enable-test
"

PKG_NAMES="
	${PN}
	lib${PN}3
	lib${PN}-devel
"
log4c_CONTENTS="
	usr/share/doc/Cygwin
	usr/share/doc/${PN}
"
liblog4c3_CONTENTS="
	etc
	usr/bin/*.dll
"
liblog4c_devel_CONTENTS="
	usr/bin/${PN}-config
	usr/include
	usr/lib
	usr/share/aclocal
	usr/share/doc/${P}/html
	usr/share/doc/${P}/*.pdf
	usr/share/man --exclude=*cygdrive*
"
