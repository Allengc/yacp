DESCRIPTION="Convenience library"
HOMEPAGE="http://kin.klever.net/${PN}/"
SRC_URI="http://kin.klever.net/dist/${P}.tar.bz2"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm -f
}

PKG_NAMES="${PN} lib${PN}0 lib${PN}-devel"
konforka_CONTENTS="usr/share"
libkonforka0_CONTENTS="usr/bin"
libkonforka_devel_CONTENTS="usr/include usr/lib"
