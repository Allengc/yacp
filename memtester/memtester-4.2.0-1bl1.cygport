DESCRIPTION="Userspace utility for testing the memory subsystem for faults"
HOMEPAGE="http://pyropus.ca/software/${PN}/"
SRC_URI="http://pyropus.ca/software/${PN}/old-versions/${P}.tar.gz"

src_compile()
{
	cd ${B}
	lndirs
	cygmake
}

src_install()
{
	cd ${B}
	dobin ${PN}.exe
	doman ${PN}.8
}

src_test()
{
	cd ${B}
	./${PN}.exe 1 1
}

DOCS="README.tests"
