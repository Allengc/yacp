DESCRIPTION="Portable UPnP SDK"
HOMEPAGE="http://pupnp.sourceforge.net/"
SRC_URI="mirror://sourceforge/pupnp/${P}.tar.bz2"

export CPPFLAGS="-D_GNU_SOURCE"

CYGCONF_ARGS="
	--disable-static
	--enable-ipv6
"

PKG_NAMES="${PN} ${PN}6 ${PN}-devel"
libupnp_CONTENTS="usr/share"
libupnp6_CONTENTS="usr/bin"
libupnp_devel_CONTENTS="usr/include usr/lib"
