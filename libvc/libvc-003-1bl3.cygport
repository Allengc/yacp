DESCRIPTION="A vCard library"
HOMEPAGE="http://rolo.sourceforge.net/"
SRC_URI="mirror://sourceforge/rolo/${P}.tar.bz2"

PKG_NAMES="${PN} ${PN}0 ${PN}-devel"
libvc_CONTENTS="usr/share/doc"
libvc0_CONTENTS="usr/bin"
libvc_devel_CONTENTS="usr/include usr/lib usr/share/man"

DOCS="doc/rfc2426.txt"

src_compile()
{
	cd ${S}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm
	cygautoreconf
	cd ${B}
	cygconf
	cygmake
}
