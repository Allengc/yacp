DESCRIPTION="Cross-platform command-line utility for image processing"
HOMEPAGE="http://entropymine.com/${PN}/"
SRC_URI="http://entropymine.com/${PN}/${PN}-src-${PV}.tar.gz"

src_compile()
{
	cd ${B}
	lndirs
	cygmake
}

src_test()
{
	cd ${B}
	pushd tests
	./runtest ${B}/imagew.exe
	popd
}

src_install()
{
	cd ${B}
	dobin imagew.exe
}

DOCS="COPYING.txt readme.txt"
