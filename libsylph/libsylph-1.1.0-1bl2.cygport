DESCRIPTION="Sylpheed's core features independent from the UI of Sylpheed"
HOMEPAGE="http://sylpheed.sraoss.jp/"
SRC_URI="http://sylpheed.sraoss.jp/sylpheed/${PN}/${P}.tar.bz2"

src_compile()
{
	cd ${S}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm
	cygautoreconf
	cd ${B}
	cygconf
	cygmake
}

PKG_NAMES="${PN} ${PN}1 ${PN}-devel"
libsylph_CONTENTS="usr/share/doc"
libsylph1_CONTENTS="usr/bin usr/share/locale"
libsylph_devel_CONTENTS="usr/include usr/lib"
