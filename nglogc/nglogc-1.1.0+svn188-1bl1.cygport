DESCRIPTION="Flexible C logging API"
HOMEPAGE="https://code.google.com/p/${PN}/"
SVN_URI="http://${PN}.googlecode.com/svn/trunk/"
SVN_MODULE="${PN}"

inherit svn

PKG_NAMES="
	${PN}
	lib${PN}0
	lib${PN}-devel
"
nglogc_CONTENTS="
	usr/share/doc --exclude=*.pdf
"
libnglogc0_CONTENTS="
	usr/bin
"
libnglogc_devel_CONTENTS="
	usr/include
	usr/lib
	usr/share/doc/${PN}/*.pdf
	usr/share/man
"
