DESCRIPTION="Yet Another CRF toolkit"
HOMEPAGE="http://crfpp.sourceforge.net/"
SRC_URI="mirror://sourceforge/crfpp/${P}.tar.gz"

CYGCONF_ARGS="--disable-static"

src_test()
{
	cd ${B}
	cp -R ${S}/example .
	for task in example/*
	do
		pushd ${task}
		./exec.sh || error "failed test in ${task}"
		popd
	done
	rm -fr example
}

PKG_NAMES="${PN} libcrfpp0 libcrfpp-devel"
CRF___CONTENTS="usr/bin/*.exe usr/share"
libcrfpp0_CONTENTS="usr/bin/*.dll"
libcrfpp_devel_CONTENTS="usr/include usr/lib"
