DESCRIPTION="General-purpose library for typical low-level operations"
HOMEPAGE="http://libhx.sourceforge.net/"
SRC_URI="mirror://sourceforge/libhx/${P}.tar.xz"

PKG_NAMES="${PN} ${PN}25 ${PN}-devel"
libHX_CONTENTS="usr/bin/*.exe usr/share"
libHX25_CONTENTS="usr/bin/cyg*.dll"
libHX_devel_CONTENTS="usr/include usr/lib"

src_test()
{
	cd ${B}
	cygtest
	cd src
	ln -sf ${S}/src/tc-option.c tc-option.c
	for exe in *.exe
	do
		./$exe
	done
	rm -f tc-option.c
}

DOCS="LICENSE* README.txt doc/*.txt"
