DESCRIPTION="Hamsterdb Embedded Storage (core library)"
HOMEPAGE="http://${PN}.com/"
SRC_URI="http://${PN}.com/dl/${P}.tar.gz"

CYGCONF_ARGS="
	--disable-static
	--enable-system-zlib
"

src_test()
{
	cd ${B}/unittests
	./test.exe
}

DIFF_EXCLUDES="Makefile"

PKG_NAMES="
	${PN}
	lib${PN}3
	lib${PN}-devel
"
hamsterdb_CONTENTS="
	usr/bin/*.exe
	usr/share
"
libhamsterdb3_CONTENTS="
	usr/bin/*.dll
"
libhamsterdb_devel_CONTENTS="
	usr/include
	usr/lib
"
