DESCRIPTION="Asynchronous DNS query library written in C++"
HOMEPAGE="http://${PN}.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

src_compile()
{
	cd ${S}
	rm -f aclocal.m4 configure
	find . -name Makefile.in | xargs rm
	cygautoreconf
	cd ${B}
	cygconf
	cygmake
}

PKG_NAMES="${PN} lib${PN}0 lib${PN}-devel"
asyncresolv_CONTENTS="usr/share"
libasyncresolv0_CONTENTS="usr/bin"
libasyncresolv_devel_CONTENTS="usr/include usr/lib"

DOCS="doc/index.html"
