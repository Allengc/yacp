DESCRIPTION="Open-source ANSI C implementation of the Khronos' OpenVG specification"
HOMEPAGE="http://shivavg.sourceforge.net/"
SRC_URI="mirror://sourceforge/shivavg/${P}.zip"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	sed -i -e 's:LDFLAGS="$LDFLAGS :LIBS=":g' configure.in
}

PKG_NAMES="${PN} libOpenVG0 libOpenVG-devel"
ShivaVG_CONTENTS="usr/share"
libOpenVG0_CONTENTS="usr/bin"
libOpenVG_devel_CONTENTS="usr/include usr/lib"
