DESCRIPTION="Libopennet allows you to open_net() files the same way you open() them now"
HOMEPAGE="http://www.rkeene.org/oss/${PN}/"
SRC_URI="http://www.rkeene.org/files/oss/${PN}/${P}.tar.gz"

PKG_NAMES="${PN} ${PN}0 ${PN}-devel"
libopennet_CONTENTS="usr/share/doc"
libopennet0_CONTENTS="usr/bin"
libopennet_devel_CONTENTS="usr/include usr/lib usr/share/man"

src_compile()
{
	cd ${S}
	rm -f aclocal.m4
	cygautoreconf
	cd ${B}
	cygconf
	cygmake
}
